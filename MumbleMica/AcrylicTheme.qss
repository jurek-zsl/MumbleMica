/*
 * Mumble Acrylic/Mica Theme for Windows 11
 * Designed to work with MicaForEveryone for blur and mica effects
 * Version: 1.0
 * Author: Custom Theme
 * Date: August 2025
 */

/* ===== MAIN WINDOW ===== */
QMainWindow {
    background-color: rgba(32, 32, 32, 160);
    color: #ffffff;
    font-family: "Segoe UI", sans-serif;
    font-size: 9pt;
}

QWidget {
    background-color: transparent;
    color: #ffffff;
    selection-background-color: rgba(0, 120, 215, 180);
    selection-color: #ffffff;
}

/* ===== MENU BAR ===== */
QMenuBar {
    background-color: rgba(45, 45, 45, 180);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 40);
    padding: 4px 8px;
    font-weight: 400;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 12px;
    border-radius: 6px;
    margin: 2px;
}

QMenuBar::item:selected {
    background-color: rgba(255, 255, 255, 30);
}

QMenuBar::item:pressed {
    background-color: rgba(255, 255, 255, 50);
}

/* ===== MENU ===== */
QMenu {
    background-color: rgba(45, 45, 45, 220);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 6px;
    margin: 2px;
}

QMenu::item {
    background-color: transparent;
    padding: 8px 20px 8px 30px;
    border-radius: 4px;
    margin: 1px;
}

QMenu::item:selected {
    background-color: rgba(255, 255, 255, 35);
}

QMenu::item:disabled {
    color: rgba(255, 255, 255, 100);
}

QMenu::separator {
    height: 1px;
    background-color: rgba(255, 255, 255, 40);
    margin: 4px 8px;
}

QMenu::indicator {
    width: 16px;
    height: 16px;
    left: 8px;
}

QMenu::indicator:checked {
    image: url(data:image/svg+xml;base64,);
}

/* ===== TOOLBAR ===== */
QToolBar {
    background-color: rgba(60, 60, 60, 120);
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 80);
    spacing: 6px;
    padding: 6px;
}

QToolBar::handle {
    background-color: rgba(255, 255, 255, 60);
    width: 2px;
    margin: 4px 2px;
    border-radius: 1px;
}

QToolBar QToolButton {
    background-color: rgba(255, 255, 255, 10);
    border: 1px solid rgba(255, 255, 255, 30);
    border-radius: 8px;
    padding: 10px;
    margin: 3px;
    min-width: 36px;
    min-height: 36px;
}

QToolBar QToolButton:hover {
    background-color: rgba(255, 255, 255, 40);
    border-color: rgba(255, 255, 255, 60);
}

QToolBar QToolButton:pressed {
    background-color: rgba(255, 255, 255, 60);
    border-color: rgba(255, 255, 255, 80);
}

QToolBar QToolButton:checked {
    background-color: rgba(0, 120, 215, 160);
    border-color: rgba(0, 120, 215, 200);
}

/* ===== TREE VIEW (Channel/User List) ===== */
QTreeView {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 30);
    border-radius: 8px;
    padding: 4px;
    outline: none;
    font-size: 9pt;
}

QTreeView::item {
    background-color: transparent;
    border: none;
    padding: 6px 8px;
    border-radius: 4px;
    margin: 1px;
    min-height: 20px;
}

QTreeView::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTreeView::item:selected {
    background-color: rgba(0, 120, 215, 160);
    color: #ffffff;
}

QTreeView::item:selected:!active {
    background-color: rgba(0, 120, 215, 100);
}

QTreeView::branch {
    background-color: transparent;
}

QTreeView::branch:has-siblings:!adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:has-siblings:adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTYgNUw2IDlMMTAgNUw2IDVaIiBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuOCIvPgo8L3N2Zz4K);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTUgNkw5IDZMNSAxMEw1IDZaIiBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuOCIvPgo8L3N2Zz4K);
}

/* ===== HEADER VIEW ===== */
QHeaderView::section {
    background-color: rgba(45, 45, 45, 180);
    border: none;
    border-right: 1px solid rgba(255, 255, 255, 30);
    padding: 8px 12px;
    font-weight: 500;
}

QHeaderView::section:hover {
    background-color: rgba(255, 255, 255, 30);
}

/* ===== LINE EDIT ===== */
QLineEdit {
    background-color: rgba(50, 50, 50, 200);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 11pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 22px;
}

QLineEdit:hover {
    border-color: rgba(255, 255, 255, 100);
    background-color: rgba(60, 60, 60, 220);
}

QLineEdit:focus {
    border: 2px solid rgba(0, 120, 215, 220);
    background-color: rgba(55, 55, 55, 240);
    box-shadow: 0 0 15px rgba(0, 120, 215, 140);
}

QLineEdit:disabled {
    background-color: rgba(45, 45, 45, 120);
    border-color: rgba(255, 255, 255, 40);
    color: rgba(255, 255, 255, 120);
}

/* Chat input specific styling */
QLineEdit[objectName="qleChat"] {
    background-color: rgba(50, 50, 50, 200);
    border: 2px solid rgba(255, 255, 255, 80);
    border-radius: 12px;
    padding: 16px 24px;
    font-size: 12pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 32px;
}

QLineEdit[objectName="qleChat"]:hover {
    border-color: rgba(255, 255, 255, 120);
    background-color: rgba(60, 60, 60, 220);
}

QLineEdit[objectName="qleChat"]:focus {
    border: 3px solid rgba(0, 120, 215, 240);
    background-color: rgba(55, 55, 55, 240);
    box-shadow: 0 0 20px rgba(0, 120, 215, 160);
}

/* ===== TEXT EDIT ===== */
QTextEdit, QPlainTextEdit {
    background-color: rgba(32, 32, 32, 160);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 8px;
    font-size: 9pt;
    color: #ffffff;
    selection-background-color: rgba(0, 120, 215, 180);
}

QTextEdit:hover, QPlainTextEdit:hover {
    border-color: rgba(255, 255, 255, 80);
}

QTextEdit:focus, QPlainTextEdit:focus {
    border: 2px solid rgba(0, 120, 215, 200);
    background-color: rgba(32, 32, 32, 200);
}

/* ===== PUSH BUTTON ===== */
QPushButton {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 10px 18px;
    font-size: 10pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 20px;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 30);
    border-color: rgba(255, 255, 255, 100);
    transform: translateY(-1px);
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 50);
    border-color: rgba(255, 255, 255, 120);
    transform: translateY(0px);
}

QPushButton:checked {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 255);
}

QPushButton:disabled {
    background-color: rgba(45, 45, 45, 100);
    border-color: rgba(255, 255, 255, 30);
    color: rgba(255, 255, 255, 100);
}

QPushButton:default {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 255);
    font-weight: 600;
}

QPushButton:default:hover {
    background-color: rgba(0, 120, 215, 220);
}

QPushButton:default:pressed {
    background-color: rgba(0, 120, 215, 255);
}

/* ===== CHECKBOX ===== */
QCheckBox {
    spacing: 8px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 120);
    border-radius: 4px;
    background-color: rgba(45, 45, 45, 180);
}

QCheckBox::indicator:hover {
    border-color: rgba(255, 255, 255, 160);
    background-color: rgba(255, 255, 255, 20);
}

QCheckBox::indicator:checked {
    background-color: rgba(0, 120, 215, 200);
    border-color: rgba(0, 120, 215, 255);
    image: url(data:image/svg+xml;base64,);
}

QCheckBox::indicator:disabled {
    border-color: rgba(255, 255, 255, 60);
    background-color: rgba(45, 45, 45, 100);
}

/* ===== RADIO BUTTON ===== */
QRadioButton {
    spacing: 8px;
    color: #ffffff;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 120);
    border-radius: 9px;
    background-color: rgba(45, 45, 45, 180);
}

QRadioButton::indicator:hover {
    border-color: rgba(255, 255, 255, 160);
    background-color: rgba(255, 255, 255, 20);
}

QRadioButton::indicator:checked {
    background-color: rgba(0, 120, 215, 200);
    border-color: rgba(0, 120, 215, 255);
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iOSIgY3k9IjkiIHI9IjMiIGZpbGw9IiNmZmZmZmYiLz4KPC9zdmc+);
}

QRadioButton::indicator:disabled {
    border-color: rgba(255, 255, 255, 60);
    background-color: rgba(45, 45, 45, 100);
}

/* ===== TAB WIDGET ===== */
QTabWidget::pane {
    background-color: rgba(32, 32, 32, 160);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 8px;
    margin-top: 4px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: rgba(45, 45, 45, 120);
    border: 1px solid rgba(255, 255, 255, 40);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
    padding: 8px 16px;
    margin-right: 2px;
    font-weight: 500;
}

QTabBar::tab:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTabBar::tab:selected {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 200);
    color: #ffffff;
}

QTabBar::tab:!selected {
    margin-top: 4px;
}

/* ===== SCROLL BAR ===== */
QScrollBar:vertical {
    background-color: rgba(45, 45, 45, 100);
    width: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: rgba(255, 255, 255, 120);
    border-radius: 6px;
    min-height: 20px;
    margin: 2px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgba(255, 255, 255, 160);
}

QScrollBar::handle:vertical:pressed {
    background-color: rgba(255, 255, 255, 200);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: rgba(45, 45, 45, 100);
    height: 12px;
    border-radius: 6px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: rgba(255, 255, 255, 120);
    border-radius: 6px;
    min-width: 20px;
    margin: 2px;
}

QScrollBar::handle:horizontal:hover {
    background-color: rgba(255, 255, 255, 160);
}

QScrollBar::handle:horizontal:pressed {
    background-color: rgba(255, 255, 255, 200);
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* ===== COMBO BOX ===== */
QComboBox {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 9pt;
    color: #ffffff;
    min-width: 100px;
}

QComboBox:hover {
    border-color: rgba(255, 255, 255, 80);
    background-color: rgba(255, 255, 255, 20);
}

QComboBox:focus {
    border: 2px solid rgba(0, 120, 215, 200);
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTQuNSA2TDggMTAuNUwxMS41IDZMNCuNSA2WiIgZmlsbD0iI2ZmZmZmZiIgZmlsbC1vcGFjaXR5PSIwLjgiLz4KPC9zdmc+);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: rgba(45, 45, 45, 220);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 4px;
    selection-background-color: rgba(0, 120, 215, 180);
}

/* ===== SPIN BOX ===== */
QSpinBox, QDoubleSpinBox {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 9pt;
    color: #ffffff;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: rgba(255, 255, 255, 80);
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid rgba(0, 120, 215, 200);
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

/* ===== SLIDER ===== */
QSlider::groove:horizontal {
    background-color: rgba(255, 255, 255, 60);
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: rgba(0, 120, 215, 200);
    width: 18px;
    height: 18px;
    border-radius: 9px;
    margin: -7px 0;
}

QSlider::handle:horizontal:hover {
    background-color: rgba(0, 120, 215, 255);
}

QSlider::groove:vertical {
    background-color: rgba(255, 255, 255, 60);
    width: 4px;
    border-radius: 2px;
}

QSlider::handle:vertical {
    background-color: rgba(0, 120, 215, 200);
    width: 18px;
    height: 18px;
    border-radius: 9px;
    margin: 0 -7px;
}

QSlider::handle:vertical:hover {
    background-color: rgba(0, 120, 215, 255);
}

/* ===== PROGRESS BAR ===== */
QProgressBar {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    text-align: center;
    font-size: 9pt;
    color: #ffffff;
}

QProgressBar::chunk {
    background-color: rgba(0, 120, 215, 200);
    border-radius: 5px;
}

/* ===== GROUP BOX ===== */
QGroupBox {
    font-size: 9pt;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    margin: 16px 0 0 0;
    padding: 16px 8px 8px 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: rgba(32, 32, 32, 200);
    color: #ffffff;
}

/* ===== SPLITTER ===== */
QSplitter::handle {
    background-color: rgba(255, 255, 255, 40);
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:pressed {
    background-color: rgba(0, 120, 215, 200);
}

/* ===== STATUS BAR ===== */
QStatusBar {
    background-color: rgba(45, 45, 45, 180);
    border-top: 1px solid rgba(255, 255, 255, 40);
    color: #ffffff;
    padding: 4px 8px;
}

QStatusBar::item {
    border: none;
}

/* ===== TOOL TIP ===== */
QToolTip {
    background-color: rgba(45, 45, 45, 240);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 6px;
    padding: 6px 8px;
    color: #ffffff;
    font-size: 9pt;
}

/* ===== DOCK WIDGET ===== */
QDockWidget {
    background-color: rgba(32, 32, 32, 160);
    titlebar-close-icon: url(data:image/svg+xml;base64,);
    titlebar-normal-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3QgeD0iMy41IiB5PSIzLjUiIHdpZHRoPSI5IiBoZWlnaHQ9IjkiIGZpbGw9Im5vbmUiIHN0cm9rZT0iI2ZmZmZmZiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1vcGFjaXR5PSIwLjgiLz4KPC9zdmc+);
}

QDockWidget::title {
    background-color: rgba(45, 45, 45, 180);
    border-bottom: 1px solid rgba(255, 255, 255, 40);
    padding: 8px;
    font-weight: 500;
}

QDockWidget::close-button, QDockWidget::float-button {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 4px;
    margin: 2px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background-color: rgba(255, 255, 255, 30);
}

/* ===== LIST WIDGET ===== */
QListWidget {
    background-color: rgba(32, 32, 32, 160);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 4px;
    outline: none;
}

QListWidget::item {
    background-color: transparent;
    border: none;
    padding: 8px;
    border-radius: 4px;
    margin: 1px;
}

QListWidget::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QListWidget::item:selected {
    background-color: rgba(0, 120, 215, 180);
    color: #ffffff;
}

/* ===== TABLE WIDGET ===== */
QTableWidget {
    background-color: rgba(32, 32, 32, 160);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    gridline-color: rgba(255, 255, 255, 30);
    selection-background-color: rgba(0, 120, 215, 180);
}

QTableWidget::item {
    background-color: transparent;
    border: none;
    padding: 8px;
}

QTableWidget::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTableWidget::item:selected {
    background-color: rgba(0, 120, 215, 180);
}

/* ===== MUMBLE SPECIFIC WIDGETS ===== */
/* Chat widget styling */
QTextBrowser {
    background-color: rgba(32, 32, 32, 140);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 12px;
    padding: 12px;
    font-family: "Segoe UI", sans-serif;
    font-size: 10pt;
    color: #ffffff;
    line-height: 1.4;
}

/* User/Channel context menus */
QFrame[objectName="ServerInformation"] {
    background-color: rgba(45, 45, 45, 200);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 12px;
    padding: 16px;
}

/* Audio configuration widgets */
QFrame[objectName="AudioInput"],
QFrame[objectName="AudioOutput"] {
    background-color: rgba(32, 32, 32, 140);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 12px;
    padding: 12px;
}

/* Connection dialog */
QDialog {
    background-color: rgba(32, 32, 32, 200);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 16px;
}

/* Message box styling */
QMessageBox {
    background-color: rgba(32, 32, 32, 220);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 16px;
}

QMessageBox QPushButton {
    min-width: 90px;
    margin: 4px;
}

/* Mumble-specific button styling */
QPushButton[objectName="qpbConnect"] {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 200);
    font-weight: 600;
    padding: 12px 24px;
    border-radius: 10px;
}

QPushButton[objectName="qpbConnect"]:hover {
    background-color: rgba(0, 120, 215, 220);
    box-shadow: 0 4px 12px rgba(0, 120, 215, 80);
}

QPushButton[objectName="qpbDisconnect"] {
    background-color: rgba(196, 43, 28, 180);
    border-color: rgba(196, 43, 28, 200);
    font-weight: 600;
    padding: 12px 24px;
    border-radius: 10px;
}

QPushButton[objectName="qpbDisconnect"]:hover {
    background-color: rgba(196, 43, 28, 220);
    box-shadow: 0 4px 12px rgba(196, 43, 28, 80);
}

/* Mute buttons styling */
QPushButton[objectName="qpbMute"] {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 10px;
    min-width: 40px;
    min-height: 40px;
}

QPushButton[objectName="qpbMute"]:checked {
    background-color: rgba(196, 43, 28, 180);
    border-color: rgba(196, 43, 28, 200);
}

