/* === Professional UI Improvements === */

/* General font */
QWidget {
    font-family: "Segoe UI", "Inter", sans-serif;
    font-size: 11pt;
    color: #EAEAEA;
}

/* Chat text box (input area) */
QTextEdit, QPlainTextEdit {
    background-color: rgba(20, 20, 20, 180);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 10px;
    padding: 8px;
    font-size: 11pt;
    color: #ffffff;
    min-height: 80px;   /* Enlarged text box */
}

/* Chat history / main panel */
QListView, QTextBrowser {
    background-color: rgba(15, 15, 15, 150);
    border: 1px solid rgba(255, 255, 255, 0.10);
    border-radius: 10px;
    padding: 6px;
}

/* Buttons */
QPushButton {
    background-color: rgba(30, 30, 30, 200);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 12px;
    padding: 6px 12px;
}
QPushButton:hover {
    background-color: rgba(45, 45, 45, 220);
    border: 1px solid rgba(100, 180, 255, 0.6);
}
QPushButton:pressed {
    background-color: rgba(60, 60, 60, 230);
}

/* Scrollbars */
QScrollBar:vertical {
    background: transparent;
    width: 10px;
    margin: 4px 0 4px 0;
}
QScrollBar::handle:vertical {
    background: rgba(180, 180, 180, 0.4);
    border-radius: 5px;
}
QScrollBar::handle:vertical:hover {
    background: rgba(100, 180, 255, 0.6);
}

/* Channel list */
QTreeView::item {
    padding: 4px 8px;
}
QTreeView::item:hover {
    background-color: rgba(100, 180, 255, 0.2);
    border-radius: 6px;
}
QTreeView::item:selected {
    background-color: rgba(100, 180, 255, 0.4);
    border-radius: 6px;
}

/* Section headers */
QLabel[section="true"] {
    font-size: 12pt;
    font-weight: bold;
    color: #64B4FF;
    margin-top: 8px;
}

/* === Spacing & Rounded Corner Fixes === */

/* Chat text box (input area) */
QTextEdit, QPlainTextEdit {
    background-color: rgba(20, 20, 20, 180);
    border: 1px solid rgba(255, 255, 255, 0.15);
    border-radius: 10px;        /* all four corners */
    padding: 6px;               /* reduced padding */
    margin: 0px;                /* remove extra spacing */
    font-size: 11pt;
    color: #ffffff;
    min-height: 60px;           /* slightly smaller */
}

/* Chat history / main panel */
QListView, QTextBrowser {
    background-color: rgba(15, 15, 15, 150);
    border: 1px solid rgba(255, 255, 255, 0.10);
    border-radius: 10px;
    padding: 6px;
    margin-bottom: 4px;         /* smaller gap above input box */
}