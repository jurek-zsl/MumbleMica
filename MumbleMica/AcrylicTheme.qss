/*
 * Mumble Acrylic/Mica The/* =============================================
   1. BASE UI & WINDOW ELEMENTS
   ============================================= */

/* Main Window */

QMainWindow {
    background-color: transparent;
    color: #EAEAEA;
    font-family: 'Segoe UI', sans-serif;
    font-size: 9pt;
}

QWidget {
    background-color: transparent;
    font-family: 'Segoe UI', sans-serif;
    font-size: 9pt;
    color: #EAEAEA;
    /* selection-background-color: rgba(0, 120, 215, 180); */
    /* selection-color: #ffffff; */
}

/* =============================================
   2. NAVIGATION & MENUS
   ============================================= */


/* ===== MENU BAR ===== */
QMenuBar {
    background-color: transparent;
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 40);
    padding: 1px 2px;
    font-weight: 400;
}

QMenuBar::item {
    background-color: transparent;
    padding: 5px 8px;
    border-radius: 6px;
    margin: 2px;
}

QMenuBar::item:selected {
    background-color: rgba(255, 255, 255, 30);
}

QMenuBar::item:pressed {
    background-color: rgba(255, 255, 255, 50);
}

/* Menu */
QMenu {
    background-color: rgba(45, 45, 45, 200);
    border: 1px solid rgba(255, 255, 255, 100);
    border-radius: 8px;
    padding: 6px;
    margin: 2px;
    color: #ffffff;
}


QMenu::item {
    background-color: transparent;
    padding: 8px 20px 8px 30px;
    border-radius: 4px;
    margin: 1px;
    color: #ffffff;
}

QMenu::item:selected {
    background-color: rgba(255, 255, 255, 35);
}

QMenu::item:disabled {
    color: rgba(255, 255, 255, 100);
}

QMenu::separator {
    height: 1px;
    background-color: rgba(32, 32, 32, 120);
    margin: 4px 8px;
}

QMenu::indicator {
    width: 16px;
    height: 16px;
    left: 8px;
}

QMenu::indicator:checked {
    image: url(data:image/svg+xml;base64,);
}


/* Toolbar */
QToolBar {
    background-color: transparent;
    border: none;
    spacing: 0px;
    padding: 0px;
}

QToolBar::handle {
    background-color: rgba(255, 255, 255, 60);
    width: 2px;
    margin: 4px 2px;
    border-radius: 1px;
}

QToolBar QToolButton {
    background-color: rgba(255, 255, 255, 10);
    border: 1px solid rgba(255, 255, 255, 30);
    border-radius: 6px;
    padding: 3px;
    margin: 2px;
    min-width: 10px;
    min-height: 10px;
}

QToolBar QToolButton:hover {
    background-color: rgba(255, 255, 255, 40);
    border-color: rgba(255, 255, 255, 60);
}

QToolBar QToolButton:pressed {
    background-color: rgba(255, 255, 255, 60);
    border-color: rgba(255, 255, 255, 80);
}

QToolBar QToolButton:checked {
    background-color: rgba(0, 120, 215, 160);
    border-color: rgba(0, 120, 215, 200);
}

/* =============================================
   3. CHANNEL & USER INTERFACE
   ============================================= */

/* Tree View (Channel/User List) */
QTreeView {
    background-color: transparent;
    border: none;
    border-radius: 8px;
    padding: 4px;
    outline: none;
    font-size: 9pt;
}

QTreeView::item {
    background-color: transparent;
    border: none;
    padding: 4px 6px;
    border-radius: 4px;
    margin: 1px;
    min-height: 18px;
}

QTreeView::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTreeView::item:selected {
    background-color: rgba(0, 120, 215, 160);
    color: #ffffff;
}

QTreeView::item:selected:!active {
    background-color: rgba(0, 120, 215, 100);
}

QTreeView::branch {
    background-color: transparent;
}

QTreeView::branch:has-siblings:!adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:has-siblings:adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:!has-children:!has-siblings:adjoins-item {
    border-image: none;
    image: none;
}

QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:closed:has-children:has-siblings {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1zbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTYgNUw2IDlMMTAgNUw2IDVaIiBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuOCIvPgo8L3N2Zz4K);
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1zbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTUgNkw5IDZMNSAxMEw1IDZaIiBmaWxsPSIjZmZmZmZmIiBmaWxsLW9wYWNpdHk9IjAuOCIvPgo8L3N2Zz4K);
}

/* Header View */
QHeaderView::section {
    background-color: rgba(32, 32, 32, 120);
    border: none;
    border-right: 1px solid rgba(255, 255, 255, 30);
    padding: 6px 10px;
    font-weight: 500;
}

QHeaderView::section:hover {
    background-color: rgba(255, 255, 255, 30);
}

/* =============================================
   4. CHAT & COMMUNICATION INTERFACE
   ============================================= */

/* Standard Line Edit */
QLineEdit {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 6px;
    padding: 0px;
    font-size: 10pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 20px;
}

QLineEdit:hover {
    border-color: rgba(255, 255, 255, 100);
    background-color: rgba(60, 60, 60, 220);
}

QLineEdit:focus {
    border: 2px solid rgba(0, 120, 215, 220);
    background-color: rgba(55, 55, 55, 240);
    box-shadow: 0 0 15px rgba(0, 120, 215, 140);
}

QLineEdit:disabled {
    background-color: rgba(45, 45, 45, 120);
    border-color: rgba(255, 255, 255, 40);
    color: rgba(255, 255, 255, 120);
}

/* Chat Input Field */
QLineEdit[objectName="qleChat"] {
    background-color: rgba(32, 32, 32, 120);
    border: 2px solid rgba(255, 255, 255, 80);
    border-radius: 10px;
    padding: 0px;
    font-size: 10pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 26px;
}

QLineEdit[objectName="qleChat"]:hover {
    border-color: rgba(255, 255, 255, 120);
    background-color: rgba(60, 60, 60, 220);
}

QLineEdit[objectName="qleChat"]:focus {
    border: 3px solid rgba(0, 120, 215, 240);
    background-color: rgba(55, 55, 55, 240);
    box-shadow: 0 0 20px rgba(0, 120, 215, 160);
}



/* =============================================
   7. COMMON UI COMPONENTS
   ============================================= */

/* Standard Push Button */
QPushButton {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 9pt;
    font-weight: 500;
    color: #ffffff;
    min-height: 18px;
}

QPushButton:hover {
    background-color: rgba(255, 255, 255, 30);
    border-color: rgba(255, 255, 255, 100);
}

QPushButton:pressed {
    background-color: rgba(255, 255, 255, 50);
    border-color: rgba(255, 255, 255, 120);
}

QPushButton:checked {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 255);
}

QPushButton:disabled {
    background-color: rgba(45, 45, 45, 100);
    border-color: rgba(255, 255, 255, 30);
    color: rgba(255, 255, 255, 100);
}

QPushButton:default {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 255);
    font-weight: 600;
}

QPushButton:default:hover {
    background-color: rgba(0, 120, 215, 220);
}

QPushButton:default:pressed {
    background-color: rgba(0, 120, 215, 255);
}

/* Checkbox */
QCheckBox {
    spacing: 8px;
    color: #ffffff;
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 120);
    border-radius: 4px;
    background-color: rgba(45, 45, 45, 180);
}

QCheckBox::indicator:hover {
    border-color: rgba(255, 255, 255, 160);
    background-color: rgba(255, 255, 255, 20);
}

QCheckBox::indicator:checked {
    background-color: rgba(0, 120, 215, 200);
    border-color: rgba(0, 120, 215, 255);
    image: url(data:image/svg+xml;base64,);
}

QCheckBox::indicator:disabled {
    border-color: rgba(255, 255, 255, 60);
    background-color: rgba(45, 45, 45, 100);
}

/* Radio Button */
QRadioButton {
    spacing: 8px;
    color: #ffffff;
}

QRadioButton::indicator {
    width: 18px;
    height: 18px;
    border: 2px solid rgba(255, 255, 255, 120);
    border-radius: 9px;
    background-color: rgba(45, 45, 45, 180);
}

QRadioButton::indicator:hover {
    border-color: rgba(255, 255, 255, 160);
    background-color: rgba(255, 255, 255, 20);
}

QRadioButton::indicator:checked {
    background-color: rgba(0, 120, 215, 200);
    border-color: rgba(0, 120, 215, 255);
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTgiIGhlaWdodD0iMTgiIHZpZXdCb3g9IjAgMCAxOCAxOCIgZmlsbD0ibm9uZSIgeG1zbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPGNpcmNsZSBjeD0iOSIgY3k9IjkiIHI9IjMiIGZpbGw9IiNmZmZmZmYiLz4KPC9zdmc+);
}

QRadioButton::indicator:disabled {
    border-color: rgba(255, 255, 255, 60);
    background-color: rgba(45, 45, 45, 100);
}

/* ===== TAB WIDGET ===== */
QTabWidget::pane {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 8px;
    margin-top: 2px;
}

QTabWidget::tab-bar {
    alignment: left;
}

QTabBar::tab {
    background-color: rgba(45, 45, 45, 120);
    border: 1px solid rgba(255, 255, 255, 40);
    border-bottom: none;
    border-radius: 6px 6px 0 0;
    /* padding: 6px 12px; */
    margin-right: 2px;
    font-weight: 500;
}

QTabBar::tab:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTabBar::tab:selected {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 200);
    color: #ffffff;
}

QTabBar::tab:!selected {
    margin-top: 2px;
}

/* ===== SCROLL BAR ===== */
QScrollBar:vertical {
    background-color: transparent;
    width: 8px;
    border-radius: 4px;
    margin: 0;
}

QScrollBar::handle:vertical {
    background-color: rgba(255, 255, 255, 120);
    border-radius: 4px;
    min-height: 16px;
    margin: 1px;
}

QScrollBar::handle:vertical:hover {
    background-color: rgba(255, 255, 255, 160);
}

QScrollBar::handle:vertical:pressed {
    background-color: rgba(255, 255, 255, 200);
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 0;
}

QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    background-color: rgba(45, 45, 45, 100);
    height: 8px;
    border-radius: 4px;
    margin: 0;
}

QScrollBar::handle:horizontal {
    background-color: rgba(255, 255, 255, 120);
    border-radius: 4px;
    min-width: 16px;
    margin: 1px;
}

QScrollBar::handle:horizontal:hover {
    background-color: rgba(255, 255, 255, 160);
}

QScrollBar::handle:horizontal:pressed {
    background-color: rgba(255, 255, 255, 200);
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 0;
}

QScrollBar::add-page:horizontal,
QScrollBar::sub-page:horizontal {
    background: none;
}

/* ===== COMBO BOX ===== */
QComboBox {
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 9pt;
    color: #ffffff;
    min-width: 90px;
}

QComboBox:hover {
    border-color: rgba(255, 255, 255, 80);
    background-color: rgba(255, 255, 255, 20);
}

QComboBox:focus {
    border: 2px solid rgba(0, 120, 215, 200);
}

QComboBox::drop-down {
    background-color: transparent;
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1zbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTQuNSA2TDggMTAuNUwxMS41IDZMNCuNSA2WiIgZmlsbD0iI2ZmZmZmZiIgZmlsbC1vcGFjaXR5PSIwLjgiLz4KPC9zdmc+);
    width: 12px;
    height: 12px;
}

QComboBox QAbstractItemView {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 4px;
    selection-background-color: rgba(0, 120, 215, 180);
}

/* ===== SPIN BOX ===== */
QSpinBox, QDoubleSpinBox {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 6px 10px;
    font-size: 9pt;
    color: #ffffff;
}

QSpinBox:hover, QDoubleSpinBox:hover {
    border-color: rgba(255, 255, 255, 80);
}

QSpinBox:focus, QDoubleSpinBox:focus {
    border: 2px solid rgba(0, 120, 215, 200);
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    background-color: transparent;
    border: none;
    width: 16px;
}

/* ===== SLIDER ===== */
QSlider::groove:horizontal {
    background-color: rgba(32, 32, 32, 120);
    height: 4px;
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background-color: rgba(0, 120, 215, 200);
    width: 14px;
    height: 14px;
    border-radius: 7px;
    margin: -5px 0;
}

QSlider::handle:horizontal:hover {
    background-color: rgba(0, 120, 215, 255);
}

QSlider::groove:vertical {
    background-color: rgba(255, 255, 255, 60);
    width: 4px;
    border-radius: 2px;
}

QSlider::handle:vertical {
    background-color: rgba(0, 120, 215, 200);
    width: 14px;
    height: 14px;
    border-radius: 7px;
    margin: 0 -5px;
}

QSlider::handle:vertical:hover {
    background-color: rgba(0, 120, 215, 255);
}

/* ===== PROGRESS BAR ===== */
QProgressBar {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    text-align: center;
    font-size: 9pt;
    color: #ffffff;
}

QProgressBar::chunk {
    background-color: rgba(0, 120, 215, 200);
    border-radius: 5px;
}

/* ===== GROUP BOX ===== */
QGroupBox {
    font-size: 9pt;
    font-weight: 500;
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    margin: 12px 0 0 0;
    padding: 12px 8px 8px 8px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: rgba(32, 32, 32, 120);
    color: #ffffff;
}

/* ===== SPLITTER ===== */
QSplitter::handle {
    background-color: rgba(32, 32, 32, 120);
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

QSplitter::handle:pressed {
    background-color: rgba(0, 120, 215, 200);
}

/* ===== STATUS BAR ===== */
QStatusBar {
    background-color: rgba(32, 32, 32, 120);
    border-top: 1px solid rgba(255, 255, 255, 40);
    color: #ffffff;
    padding: 4px 8px;
}

QStatusBar::item {
    border: none;
}

/* ===== TOOL TIP ===== */
QToolTip {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 6px;
    padding: 6px 8px;
    color: #ffffff;
    font-size: 9pt;
}

/* ===== DOCK WIDGET ===== */
QDockWidget {
    background-color: rgba(32, 32, 32, 120);
    titlebar-close-icon: url(data:image/svg+xml;base64,);
    titlebar-normal-icon: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1zbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHJlY3QgeD0iMy41IiB5PSIzLjUiIHdpZHRoPSI5IiBoZWlnaHQ9IjkiIGZpbGw9Im5vbmUiIHN0cm9rZT0iI2ZmZmZmZiIgc3Ryb2tlLXdpZHRoPSIxLjUiIHN0cm9rZS1vcGFjaXR5PSIwLjgiLz4KPC9zdmc+);
}

QDockWidget::title {
    background-color: rgba(32, 32, 32, 120);
    border-bottom: 1px solid rgba(255, 255, 255, 40);
    padding: 8px;
    font-weight: 500;
}

QDockWidget::close-button, QDockWidget::float-button {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 4px;
    margin: 2px;
}

QDockWidget::close-button:hover, QDockWidget::float-button:hover {
    background-color: rgba(255, 255, 255, 30);
}

/* ===== LIST WIDGET ===== */
QListWidget {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    padding: 4px;
    outline: none;
}

QListWidget::item {
    background-color: transparent;
    border: none;
    padding: 8px;
    border-radius: 4px;
    margin: 1px;
}

QListWidget::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QListWidget::item:selected {
    background-color: rgba(0, 120, 215, 180);
    color: #ffffff;
}

/* ===== TABLE WIDGET ===== */
QTableWidget {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 8px;
    gridline-color: rgba(255, 255, 255, 30);
    selection-background-color: rgba(0, 120, 215, 180);
}

QTableWidget::item {
    background-color: transparent;
    border: none;
    padding: 8px;
}

QTableWidget::item:hover {
    background-color: rgba(255, 255, 255, 25);
}

QTableWidget::item:selected {
    background-color: rgba(0, 120, 215, 180);
}

/* ===== MUMBLE SPECIFIC WIDGETS ===== */
/* Chat widget styling */
QListView, QTextBrowser {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 12px;
    /* padding: 12px; */
    font-family: "Segoe UI", sans-serif;
    font-size: 10pt;
    color: #ffffff;
    line-height: 1.4;
}

/* User/Channel context menus */
QFrame[objectName="ServerInformation"] {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 12px;
    padding: 16px;
}

/* =============================================
   6. CONFIGURATION DIALOGS
   ============================================= */

/* Audio Configuration Widgets */
QFrame[objectName="AudioInput"],
QFrame[objectName="AudioOutput"] {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 40);
    border-radius: 12px;
    padding: 12px;
}

/* Connection Dialog */
QDialog {
    background-color: rgba(32, 32, 32, 120);
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 12px;
}

/* Message Box */
QMessageBox {
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 80);
    border-radius: 12px;
}

QMessageBox QPushButton {
    min-width: 80px;
    /* margin: 4px; */
}

/* =============================================
   5. CONNECTION & VOICE CONTROLS
   ============================================= */

/* Connect Button */
QPushButton[objectName="qpbConnect"] {
    background-color: rgba(0, 120, 215, 180);
    border-color: rgba(0, 120, 215, 200);
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 8px;
}

QPushButton[objectName="qpbConnect"]:hover {
    background-color: rgba(0, 120, 215, 220);
    box-shadow: 0 4px 12px rgba(0, 120, 215, 80);
}

/* Disconnect Button */
QPushButton[objectName="qpbDisconnect"] {
    background-color: rgba(196, 43, 28, 180);
    border-color: rgba(196, 43, 28, 200);
    font-weight: 600;
    padding: 8px 16px;
    border-radius: 8px;
}

QPushButton[objectName="qpbDisconnect"]:hover {
    background-color: rgba(196, 43, 28, 220);
    box-shadow: 0 4px 12px rgba(196, 43, 28, 80);
}

/* Mute Button */
QPushButton[objectName="qpbMute"] {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 8px;
    min-width: 32px;
    min-height: 32px;
}

QPushButton[objectName="qpbMute"]:checked {
    background-color: rgba(196, 43, 28, 180);
    border-color: rgba(196, 43, 28, 200);
}

/* Deafen Button */
QPushButton[objectName="qpbDeafen"] {
    background-color: rgba(45, 45, 45, 180);
    border: 1px solid rgba(255, 255, 255, 60);
    border-radius: 6px;
    padding: 8px;
    min-width: 32px;
    min-height: 32px;
}

QPushButton[objectName="qpbDeafen"]:checked {
    background-color: rgba(196, 43, 28, 180);
    border-color: rgba(196, 43, 28, 200);
}

/* Chat Send Button */
QPushButton[objectName="qpbSend"] {
    background-color: rgba(32, 32, 32, 120);
    border-color: rgba(0, 120, 215, 200);
    border-radius: 8px;
    padding: 8px 14px;
    font-weight: 600;
    min-height: 22px;
}

QPushButton[objectName="qpbSend"]:hover {
    background-color: rgba(0, 120, 215, 220);
    box-shadow: 0 4px 12px rgba(0, 120, 215, 80);
}

/* Professional UI Improvements */

/* Section Headers */
QLabel[section="true"] {
    font-size: 12pt;
    font-weight: bold;
    color: #64B4FF;
    margin-top: 8px;
}

/* Chat */
QTextEdit, QPlainTextEdit {
    background-color: rgba(0, 0, 0, 60);
    border: 1px solid transparent;
    border-radius: 6px;
    padding: 0px;
    font-size: 9pt;
    color: #ffffff;
    /* selection-background-color: rgba(0, 120, 215, 180); */
}

